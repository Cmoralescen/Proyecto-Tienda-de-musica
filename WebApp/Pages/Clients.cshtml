@page
@using WebApp.Pages.Shared
@model ClientsModel
@{
	ViewData["Title"] = "Clientes";
}


    <div class="container mt-4">
        <h2 class="text-center text-orange">Clientes</h2>

        <div class="d-flex justify-content-between my-3">
            <input type="text" class="form-control w-50" placeholder="Buscar cliente...">
            <button class="btn btn-success ms-2">Registrar</button>
        </div>

        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Nombre</th>
                    <th>Correo</th>
                    <th>Teléfono</th>
                    <th>Dirección</th>
                    <th>Acciones</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td>Ejemplo Nombre</td>
                    <td>correo@ejemplo.com</td>
                    <td>12345678</td>
                    <td>Ejemplo Dirección</td>
                    <td>
                        <button class="btn btn-warning btn-sm">
                            <i class="bi bi-pencil"></i>
                        </button>
                        <button class="btn btn-danger btn-sm">
                            <i class="bi bi-trash"></i>
                        </button>
                    </td>
                </tr>
            </tbody>
        </table>
    </div>
