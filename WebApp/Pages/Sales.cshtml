@page
@model SalesModel
@{
    ViewData["Title"] = "Ventas";
}

<div class="container mt-4">
    <h2 class="text-center text-orange">Ventas</h2>

    <div class="d-flex justify-content-between my-3">
        <input type="text" class="form-control w-50" id="txtSearchSale" placeholder="Buscar venta...">
        <button class="btn btn-success ms-2" id="btnRegisterSale">Registrar</button>
    </div>

    <table class="table table-striped">
        <thead>
            <tr>
                <th>ID</th>
                <th>Cliente</th>
                <th>Empleado</th>
                <th>Fecha</th>
                <th>Total</th>
            </tr>
        </thead>
        <tbody>
            
        </tbody>
    </table>
</div>

<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
<script src="~/js/ControlAction.js" defer></script>
<script src="~/js/Sales.js"></script>
