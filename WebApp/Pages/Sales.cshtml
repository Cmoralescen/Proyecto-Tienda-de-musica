@page
@model SalesModel
@{
    ViewData["Title"] = "Ventas";
}

<div class="container mt-4">
    <h2 class="text-center text-orange">Ventas</h2>

    <div class="d-flex justify-content-between my-3">
        <input type="text" class="form-control w-50" placeholder="Buscar venta...">
        <button class="btn btn-success ms-2">Registrar</button>
    </div>

    <table class="table table-striped">
        <thead>
            <tr>
                <th>ID</th>
                <th>Cliente</th>
                <th>Empleado</th>
                <th>Fecha</th>
                <th>Total</th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td>1</td>
                <td>Ejemplo Cliente</td>
                <td>Ejemplo Empleado</td>
                <td>2025-03-24</td>
                <td>₡50,000</td>
                <td>
                    <button class="btn btn-warning btn-sm">
                        <i class="bi bi-pencil"></i>
                    </button>
                    <button class="btn btn-danger btn-sm">
                        <i class="bi bi-trash"></i>
                    </button>
                </td>
            </tr>
        </tbody>
    </table>
</div>
