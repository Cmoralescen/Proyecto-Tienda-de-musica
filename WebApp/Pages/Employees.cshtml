@page
@model EmployeesModel
@{
    ViewData["Title"] = "Empleados";
}

    <div class="container mt-4">
        <h2 class="text-center text-orange">Empleados</h2>

        <div class="d-flex justify-content-between my-3">
            <input type="text" class="form-control w-50" placeholder="Buscar empleado...">
            <button class="btn btn-success ms-2">Registrar</button>
        </div>

        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Nombre</th>
                    <th>Correo</th>
                    <th>Teléfono</th>
                    <th>Cargo</th>
                    <th>Salario</th>
                    <th>Horario</th>
                    <th>Acciones</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td>Ejemplo Nombre</td>
                    <td>correo@ejemplo.com</td>
                    <td>12345678</td>
                    <td>Ejemplo Cargo</td>
                    <td>₡500,000</td>
                    <td>08:00 - 17:00</td>
                    <td>
                        <button class="btn btn-warning btn-sm">
                            <i class="bi bi-pencil"></i>
                        </button>
                        <button class="btn btn-danger btn-sm">
                            <i class="bi bi-trash"></i>
                        </button>
                    </td>
                </tr>
            </tbody>
        </table>
    </div>


