@page
@model ProductsModel
@{
    ViewData["Title"] = "Productos";
}
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css">
<div class="container mt-4">
    <h2 class="text-center text-orange">Productos</h2>

    <div class="input-group w-50">
        <input type="text" class="form-control" id="searchInput" placeholder="Buscar [entidad]...">
        <button class="btn btn-primary" id="btnSearch">Buscar</button>
        <button class="btn btn-success ms-2" id="btnRegister">Registrar</button>
    </div>
       
    </div>

    <table class="table table-striped">
        <thead>
            <tr>
                <th>ID</th>
                <th>Nombre</th>
                <th>Precio</th>
                <th>Categoría</th>
                <th>Descripción</th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
            
        </tbody>
    </table>
</div>
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
<script src="~/js/ControlAction.js" defer></script>
<script src="~/js/Products.js"></script>