@page
@model WebApp.Pages.categoriesModel
@{
    ViewData["Title"] = "Categorías";
}
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css">

<div class="container mt-4">
    <h2 class="text-center text-orange">Categorías</h2>

    <div class="d-flex justify-content-between my-3">
        <input type="text" class="form-control w-50" placeholder="Buscar categoría...">
        <button id="btnRegister" class="btn btn-success ms-2">Registrar</button>
    </div>

    <table class="table table-striped">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nombre</th>
                <th>Descripción</th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
        </tbody>
    </table>
</div>

<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
<script src="~/js/ControlAction.js" defer></script>
<script src="~/js/Categories.js"></script>