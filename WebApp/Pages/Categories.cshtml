@page
@model WebApp.Pages.categoriesModel
@{
    ViewData["Title"] = "Categorías";
}

<div class="container mt-4">
    <h2 class="text-center text-orange">Categorías</h2>

    <div class="d-flex justify-content-between my-3">
        <input type="text" class="form-control w-50" placeholder="Buscar categoría...">
        <button class="btn btn-success ms-2">Registrar</button>
    </div>

    <table class="table table-striped">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nombre</th>
                <th>Descripción</th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td>1</td>
                <td>Ejemplo Categoría</td>
                <td>Descripción de ejemplo</td>
                <td>
                    <button class="btn btn-warning btn-sm">
                        <i class="bi bi-pencil"></i>
                    </button>
                    <button class="btn btn-danger btn-sm">
                        <i class="bi bi-trash"></i>
                    </button>
                </td>
            </tr>
        </tbody>
    </table>
</div>
